    tools:context=".fragments.SongFragment">

    <TextView
        android:id="@+id/song_mix_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="내 취향 MIX"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/song_mix_toggle"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:layout_marginStart="140dp"/>
    <ImageView
        android:id="@+id/song_mix_toggle"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_toggle_off"
        app:layout_constraintStart_toEndOf="@id/song_mix_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_marginEnd="140dp"/>

    <TextView
        android:id="@+id/song_all_select_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="전체선택"
        android:textColor="@color/gray_title"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/song_mix_toggle"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"/>

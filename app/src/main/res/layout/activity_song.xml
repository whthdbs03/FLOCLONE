<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".SongActivity">

    <LinearLayout
        android:id="@+id/btn_group_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_player_setting"
            android:adjustViewBounds="true"
            android:background="@color/black"
            android:backgroundTint="#333333"
            android:scaleType="fitCenter"/>
        <Space
            android:layout_width="20dp"
            android:layout_height="wrap_content"/>
        <ImageButton
            android:layout_width="33dp"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_player_eq_off"
            android:background="@color/black"
            android:adjustViewBounds="true"
            android:backgroundTint="#333333"
            android:scaleType="fitCenter"/>
        <Space
            android:layout_width="250dp"
            android:layout_height="wrap_content"/>
        <ImageButton
            android:id="@+id/song_arrow_down_ib"
            android:layout_width="34dp"
            android:layout_height="wrap_content"
            android:src="@drawable/nugu_btn_down"
            android:adjustViewBounds="true"
            android:background="@color/black"
            android:scaleType="fitCenter"/>
    </LinearLayout>
    <TextView
        android:id="@+id/song_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="제목"
        android:textSize="24sp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_group_ll"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/singer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가수"
        android:textSize="20sp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/song_title_tv"
        android:layout_marginTop="5dp"/>
    <ImageView
        android:id="@+id/album_iv"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:src="@drawable/img_album_exp"
        android:adjustViewBounds="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/singer_tv"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/lyrics_tv"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="첫눈 오는 이런 오후에 너에게 전화를 걸 수만"
        android:textColor="@color/gray_title"
        app:layout_constraintTop_toBottomOf="@id/album_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/ic_like_off_iv"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_my_like_off"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lyrics_tv"
        app:layout_constraintEnd_toStartOf="@id/player_more_iv"
        android:background="#333333"
        android:layout_marginTop="20dp"
        android:layout_marginStart="110dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"/>
    <ImageView
        android:id="@+id/player_more_iv"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_player_more"
        app:layout_constraintStart_toEndOf="@id/ic_like_off_iv"
        app:layout_constraintTop_toBottomOf="@id/lyrics_tv"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="110dp"
        android:background="#333333"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"/>

    <SeekBar
        android:id="@+id/song_progress_sb"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="30dp"
        android:background="@null"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        android:progress="0"
        android:progressBackgroundTint="@color/song_player_bg"
        android:progressTint="@color/song_player"
        android:thumb="@color/transparent"
        android:max="100000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/player_more_iv" />

    <TextView
        android:id="@+id/song_start_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textColor="@color/select_color"
        app:layout_constraintStart_toStartOf="@+id/song_progress_sb"
        app:layout_constraintTop_toBottomOf="@+id/song_progress_sb" />


    <TextView
        android:id="@+id/song_end_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textColor="@color/gray_color"
        app:layout_constraintEnd_toEndOf="@+id/song_progress_sb"
        app:layout_constraintTop_toBottomOf="@+id/song_progress_sb" />

    <LinearLayout
        android:id="@+id/song_icon_group_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/song_end_time_tv">
        <ImageView
            android:id="@+id/song_repeat_iv"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/nugu_btn_repeat_inactive"
            android:background="@color/flo"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="16dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"/>
        <ImageView
            android:id="@+id/song_skip_prev_iv"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:src="@drawable/nugu_btn_skip_previous_32"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"/>
        <ImageView
            android:id="@+id/song_pause_iv"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:src="@drawable/nugu_btn_pause_32"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/song_play_iv"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:src="@drawable/nugu_btn_play_32"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"/>
        <ImageView
            android:id="@+id/song_skip_next_iv"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:src="@drawable/nugu_btn_skip_next_32"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"/>
        <ImageView
            android:id="@+id/song_random_iv"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:src="@drawable/nugu_btn_random_inactive"
            android:layout_weight="1"
            android:layout_marginStart="30dp"
            android:background="@color/flo"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_marginEnd="16dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/etc_icon_group_ll"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/song_icon_group_ll"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/btn_actionbar_instagram"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_weight="1"/>
        <Space
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:src="@drawable/btn_player_related"
            android:background="@color/flo"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"/>
        <Space
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/btn_miniplayer_go_list"
            android:background="@color/flo"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
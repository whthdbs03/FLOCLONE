<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".fragments.AlbumFragment">

    <ImageView
        android:id="@+id/album_turn_back_iv"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/btn_arrow_more"
        android:rotationY="@integer/material_motion_duration_medium_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/album_ic_like_off_iv"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_my_like_off"
        android:background="#333333"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/album_ic_more_iv"/>
    <ImageView
        android:id="@+id/album_ic_more_iv"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_player_more"
        android:background="#333333"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/album_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10cm The First EP"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/album_ic_more_iv"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/album_singer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10CM"
        android:textSize="20sp"
        android:textColor="@color/gray_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/album_title_tv"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/album_info_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2010.04.22  미니  포크팝,인디록"
        android:textSize="14sp"
        android:textColor="@color/gray_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/album_singer_tv"
        android:layout_marginTop="5dp"/>

    <ImageView
        android:id="@+id/album_cover_iv"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:src="@drawable/img_album_exp"
        android:adjustViewBounds="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/album_info_iv"
        android:layout_marginTop="20dp"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_tb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabRippleColor="#00FF0000"
        app:tabSelectedTextColor="@color/flo"
        app:tabIndicatorColor="@color/flo"
        app:tabIndicatorFullWidth="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/album_cover_iv"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/album_content_vp"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tab_tb"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>